<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>API Alerts</Title>
    <Authors>API Alerts</Authors>
    <PackageProjectUrl>https://apialerts.com/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/apialerts/apialerts-csharp</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>icon.png</PackageIcon>
    <Version>1.0.0-alpha3</Version>
    <RootNamespace>APIAlerts</RootNamespace>
    <Description>Python wrapper for the apialerts.com service</Description>
    <Summary>Python wrapper for the apialerts.com service</Summary>
    <Copyright>Copyright © API Alerts 2025</Copyright>
    <PackageTags>API Alerts Push Notifications Monitoring</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
